<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/shadow_hud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone"
        tools:visibility="visible"
        tools:alpha="0.3"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_search_bar"
        android:layout_gravity="top"
        android:layout_margin="@dimen/margin_medium"
        android:elevation="16dp">

        <TextView
            android:id="@+id/text_search_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="@dimen/margin_medium"
            android:text="@string/hint_search"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/hint_text"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <EditText
            android:id="@+id/edit_search_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="@string/hint_search"
            android:inputType="textAutoCorrect"
            android:visibility="gone" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="16dp"
        app:cardCornerRadius="8dp"
        >

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/motion_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutDescription="@xml/motion_bottom_sheet"
            tools:showIn="@layout/fragment_hud">

            <ImageButton
                android:id="@+id/button_menu"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/min_clickable_size"
                android:layout_height="@dimen/min_clickable_size"
                android:src="@drawable/ic_menu_black_24dp"
                android:tint="@android:color/tertiary_text_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_parts"
                android:layout_width="0dp"
                android:layout_height="@dimen/min_clickable_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/button_menu"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/list_item_part" />

            <LinearLayout
                android:id="@+id/layout_by_game"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_parts"
                tools:layout_height="wrap_content"
                tools:layout_width="match_parent"
                tools:visibility="visible" >

                <ImageView
                    android:src="@drawable/ic_album_black_24dp"
                    android:layout_width="@dimen/min_clickable_size"
                    android:layout_height="@dimen/min_clickable_size"
                    android:padding="12dp"
                    android:tint="@android:color/tertiary_text_dark"
                    />

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/min_clickable_size"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text="@string/label_by_game"
                    android:paddingStart="@dimen/margin_medium"
                    android:textColor="@android:color/tertiary_text_dark"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_by_composer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_by_game"
                tools:visibility="visible"  >

                <ImageView
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_width="@dimen/min_clickable_size"
                    android:layout_height="@dimen/min_clickable_size"
                    android:padding="12dp"
                    android:tint="@android:color/tertiary_text_dark"
                    />

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/min_clickable_size"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text="@string/label_by_composer"
                    android:paddingStart="@dimen/margin_medium"
                    android:textColor="@android:color/tertiary_text_dark"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_all_sheets"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_by_composer"
                tools:visibility="visible"  >

                <ImageView
                    android:src="@drawable/ic_description_black_24dp"
                    android:layout_width="@dimen/min_clickable_size"
                    android:layout_height="@dimen/min_clickable_size"
                    android:padding="12dp"
                    android:tint="@android:color/tertiary_text_dark"
                    />

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/min_clickable_size"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text="@string/label_all_sheets"
                    android:paddingStart="@dimen/margin_medium"
                    android:textColor="@android:color/tertiary_text_dark"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_random_select"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_all_sheets"
                tools:visibility="visible" >

                <ImageView
                    android:src="@drawable/ic_shuffle_black_24dp"
                    android:layout_width="@dimen/min_clickable_size"
                    android:layout_height="@dimen/min_clickable_size"
                    android:padding="12dp"
                    android:tint="@android:color/tertiary_text_dark"
                    />

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/min_clickable_size"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text="@string/label_random"
                    android:paddingStart="@dimen/margin_medium"
                    android:textColor="@android:color/tertiary_text_dark"
                    />
            </LinearLayout>

        </androidx.constraintlayout.motion.widget.MotionLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
