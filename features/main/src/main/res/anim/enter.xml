<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <alpha
        android:interpolator="@android:interpolator/decelerate_quad"
        android:fromAlpha="@string/alpha_transparent"
        android:toAlpha="@string/alpha_opaque"
        android:duration="@integer/duration_slow" />

    <scale
        android:interpolator="@android:interpolator/decelerate_quad"
        android:fromXScale="@dimen/scale_small"
        android:toXScale="@dimen/scale_normal"
        android:fromYScale="@dimen/scale_small"
        android:toYScale="@dimen/scale_normal"
        android:pivotX="@dimen/pivot_center"
        android:pivotY="@dimen/pivot_up"
        android:duration="@integer/duration_slow" />
</set>
