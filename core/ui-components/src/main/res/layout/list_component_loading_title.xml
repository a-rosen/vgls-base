<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="toBind"
            type="com.vgleadsheets.components.LoadingTitleListModel" />
    </data>

    <com.vgleadsheets.components.CustomMotionLayout
        android:id="@id/root_title"
        android:visibility="@{toBind.hidden ? View.INVISIBLE : View.VISIBLE}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shrinkPercent="@{toBind.shrinkPercent}"
        app:layoutDescription="@xml/list_component_title_scene">

        <Space
            android:id="@+id/space_status_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:shouldSetMinHeightOnly="@{toBind.shouldSetMinHeightOnly}" />

        <View
            android:id="@+id/view_background"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageView
            android:background="?attr/selectableItemBackground"
            android:id="@+id/button_app_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:contentDescription="@string/cont_desc_app_menu"
            android:src="@drawable/ic_menu_24dp"
            android:onClick="@{() -> toBind.onMenuButtonClick.invoke()}"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/icon_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:cardCornerRadius="72dp"
            app:cardElevation="16dp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/text_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:cardCornerRadius="@dimen/loading_card_corner_radius"
            app:cardElevation="0dp"
            tools:text="VGLeadSheets" />

        <androidx.cardview.widget.CardView
            android:id="@+id/text_title_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:cardCornerRadius="@dimen/loading_card_corner_radius"
            app:cardElevation="0dp"/>

    </com.vgleadsheets.components.CustomMotionLayout>
</layout>
